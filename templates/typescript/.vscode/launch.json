  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["debug"],
      "env": {
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      },
      "console": "integratedTerminal",
      "restart": true,
      "autoAttachChildProcesses": true,
      "protocol": "auto",
      "port": 9999,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ]
}
